import tkinter as tk
from tkinter import messagebox
import random
import string

def generate_password():
    try:
        length = int(length_entry.get())
        if length < 1:
            raise ValueError("Length must be at least 1.")
        
        # Define character sets
        lower = string.ascii_lowercase
        upper = string.ascii_uppercase
        digits = string.digits
        punctuation = string.punctuation
        
        # Combine character sets
        all_characters = lower + upper + digits + punctuation

        # Generate password
        password = ''.join(random.choice(all_characters) for _ in range(length))
        
        # Display the generated password in a popup
        messagebox.showinfo("Password Generated", f"Your generated password is:\n{password}")
        
    except ValueError as ve:
        messagebox.showerror("Input Error", str(ve))

def reset_password():
    length_entry.delete(0, tk.END)  # Clear the input field

# Create the main window
window = tk.Tk()
window.title("Password Generator")
window.geometry("400x250")
window.config(bg="#f0f8ff")

# Length input
length_label = tk.Label(window, text="Enter password length (1 or more):", font=("Arial", 12), bg="#f0f8ff", fg="#333333")
length_label.pack(pady=10)

length_entry = tk.Entry(window, font=("Arial", 12), width=10, bd=2, relief="solid")
length_entry.pack(pady=5)

# Generate button
generate_button = tk.Button(window, text="Generate Password", command=generate_password, bg="#4caf50", fg="white", font=("Arial", 12), activebackground="#388e3c")
generate_button.pack(pady=10)

# Reset button
reset_button = tk.Button(window, text="Reset", command=reset_password, bg="#f44336", fg="white", font=("Arial", 12), activebackground="#c62828")
reset_button.pack(pady=5)

# Footer label
footer_label = tk.Label(window, text="Password Generator by YourName", font=("Arial", 10), bg="#f0f8ff", fg="#555555")
footer_label.pack(side=tk.BOTTOM, pady=15)

# Run the application
window.mainloop()
