import tkinter as tk
import random

# Game logic
def determine_winner(user_choice, computer_choice):
    if user_choice == computer_choice:
        return "It's a tie!"
    elif (user_choice == "Rock" and computer_choice == "Scissors") or \
         (user_choice == "Scissors" and computer_choice == "Paper") or \
         (user_choice == "Paper" and computer_choice == "Rock"):
        return "You win!"
    else:
        return "You lose!"

def play(choice):
    computer_choice = random.choice(["Rock", "Paper", "Scissors"])
    result = determine_winner(choice, computer_choice)

    # Update the labels
    user_choice_label.config(text=f"Your choice: {choice}", bg="#e0f7fa")
    computer_choice_label.config(text=f"Computer's choice: {computer_choice}", bg="#fce4ec")
    result_label.config(text=result, bg="#fff9c4")
    
    # Update scores
    if result == "You win!":
        global user_score
        user_score += 1
    elif result == "You lose!":
        global computer_score
        computer_score += 1
    
    score_label.config(text=f"Score - You: {user_score} | Computer: {computer_score}", bg="#f1f8e9")

def reset_game():
    global user_score, computer_score
    user_score = 0
    computer_score = 0
    score_label.config(text="Score - You: 0 | Computer: 0", bg="#f1f8e9")
    user_choice_label.config(text="", bg="#ffffff")
    computer_choice_label.config(text="", bg="#ffffff")
    result_label.config(text="", bg="#ffffff")

# Initialize scores
user_score = 0
computer_score = 0

# Create the main window
window = tk.Tk()
window.title("Rock-Paper-Scissors Game")
window.geometry("400x400")
window.config(bg="#ffffff")

# Score display
score_label = tk.Label(window, text="Score - You: 0 | Computer: 0", font=("Arial", 12), bg="#f1f8e9")
score_label.pack(pady=10)

# User choice labels
user_choice_label = tk.Label(window, text="", font=("Arial", 12), bg="#ffffff")
user_choice_label.pack(pady=5)

computer_choice_label = tk.Label(window, text="", font=("Arial", 12), bg="#ffffff")
computer_choice_label.pack(pady=5)

# Result display
result_label = tk.Label(window, text="", font=("Arial", 14), bg="#ffffff")
result_label.pack(pady=10)

# Buttons for user choices
button_frame = tk.Frame(window, bg="#ffffff")
button_frame.pack(pady=20)

rock_button = tk.Button(button_frame, text="Rock", command=lambda: play("Rock"), width=10, bg="#ffccbc", activebackground="#ef9a9a")
paper_button = tk.Button(button_frame, text="Paper", command=lambda: play("Paper"), width=10, bg="#bbdefb", activebackground="#90caf9")
scissors_button = tk.Button(button_frame, text="Scissors", command=lambda: play("Scissors"), width=10, bg="#c8e6c9", activebackground="#a5d6a7")

rock_button.pack(side=tk.LEFT, padx=5)
paper_button.pack(side=tk.LEFT, padx=5)
scissors_button.pack(side=tk.LEFT, padx=5)

# Reset button
reset_button = tk.Button(window, text="Reset Score", command=reset_game, bg="#e57373", fg="white", font=("Arial", 12))
reset_button.pack(pady=10)

# Run the application
window.mainloop()
